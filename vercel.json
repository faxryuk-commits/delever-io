{
  "crons": [
    {
      "path": "/api/cron/check-timers",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/daily-report",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/weekly-report",
      "schedule": "0 5 * * 6"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(Telegrambot|facebookexternalhit|Twitterbot|LinkedInBot|WhatsApp|Slackbot|Discordbot).*"
        }
      ],
      "destination": "/api/og-tags?path=/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/chatbot.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/ai-marketing.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/og-tags.ts": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
